rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Validation helpers
    function isValidSessionStatus(status) {
      return status in ['in-progress', 'completed', 'abandoned'];
    }

    function isValidProblemType(type) {
      return type in ['algebra', 'geometry', 'word-problem', 'calculus', 'statistics', 'other'];
    }

    function isValidSpeaker(speaker) {
      return speaker in ['user', 'assistant'];
    }

    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);

      // Sessions subcollection - users can only access their own sessions
      match /sessions/{sessionId} {
        allow read: if isAuthenticated() && isOwner(userId);

        // Create with validation
        allow create: if isAuthenticated() && isOwner(userId)
          && request.resource.data.keys().hasAll(['problemText', 'problemType', 'status', 'createdAt', 'updatedAt', 'turnCount', 'hints', 'lastActivityAt'])
          && request.resource.data.problemText is string
          && request.resource.data.problemText.size() >= 5
          && request.resource.data.problemText.size() <= 500
          && isValidProblemType(request.resource.data.problemType)
          && isValidSessionStatus(request.resource.data.status)
          && request.resource.data.turnCount is int
          && request.resource.data.turnCount >= 0
          && request.resource.data.turnCount <= 50
          && request.resource.data.hints is list;

        // Update with validation - ensure turn count only increases
        allow update: if isAuthenticated() && isOwner(userId)
          && isValidSessionStatus(request.resource.data.status)
          && request.resource.data.turnCount >= resource.data.turnCount
          && request.resource.data.turnCount <= 50;

        // Allow delete
        allow delete: if isAuthenticated() && isOwner(userId);

        // Turns subcollection - users can only access turns in their own sessions
        match /turns/{turnId} {
          allow read: if isAuthenticated() && isOwner(userId);

          // Create with validation
          allow create: if isAuthenticated() && isOwner(userId)
            && request.resource.data.keys().hasAll(['speaker', 'message', 'timestamp'])
            && isValidSpeaker(request.resource.data.speaker)
            && request.resource.data.message is string
            && request.resource.data.message.size() > 0
            && request.resource.data.message.size() <= 5000
            && request.resource.data.timestamp is timestamp;

          // Generally turns should not be updated/deleted, but allow for admin corrections
          allow update, delete: if isAuthenticated() && isOwner(userId);
        }
      }
    }

    // Parsed images cache - users can only access their own cached results
    match /parsed_images/{imageHash} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Daily usage tracking - users can only read/write their own usage data
    match /daily_usage/{userId} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
